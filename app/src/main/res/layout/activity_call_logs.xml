<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PhoneCalls.CallLogsActivity">

    <RelativeLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_border_background"
        android:fitsSystemWindows="true"
        tools:context=".ui.CallMain.MainActivity">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_color">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="16dp"
                android:text="Call "
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ic_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="start"
                android:layout_marginEnd="16dp"
                android:color="@android:color/white"
                android:src="@drawable/ic_back" />

        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/Searchdata"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/card_border_background"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:hint="Search By Name Or Number"
                android:padding="@dimen/_6sdp"
                android:textSize="@dimen/_13sdp" />

            <ImageView
                android:id="@+id/btnToggleDialPad"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_2sdp"
                android:contentDescription="Dial"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/dail_ic" />
        </LinearLayout>
        <!-- Filter Layout -->
        <LinearLayout
            android:id="@+id/filterLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:gravity="center"
            android:layout_below="@+id/searchBar"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/filterLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_23sdp"
                android:layout_marginVertical="@dimen/_2sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="5">

                <TextView
                    android:id="@+id/filterAll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:layout_weight="0.8"
                    android:background="@drawable/filter_unselected"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:paddingVertical="@dimen/_2sdp"
                    android:text="All"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/filterDialed"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/filter_unselected"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:paddingVertical="@dimen/_2sdp"
                    android:text="Dialed"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/filterReceived"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="1.2"
                    android:background="@drawable/filter_unselected"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:paddingVertical="@dimen/_2sdp"
                    android:text="Received"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/filterMissed"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/filter_unselected"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:paddingVertical="@dimen/_2sdp"
                    android:text="Missed"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/filterRejected"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/filter_unselected"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:paddingVertical="@dimen/_2sdp"
                    android:text="Rejected"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>
        </LinearLayout>

        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/filterLayout1"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_marginVertical="@dimen/_6sdp"
            android:clipToPadding="false" />

        <!-- DialPad Layout -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_below="@id/filterLayout1"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_110sdp"
            android:indeterminate="true"
            android:indeterminateTint="@color/primary_color"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/dialContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_gradient_backall"
            android:elevation="@dimen/_2sdp"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_1sdp">

                <TextView
                    android:id="@+id/typedNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/btnDelete"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:maxLength="10"
                    android:paddingVertical="@dimen/_3sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_20sdp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <ImageButton
                    android:id="@+id/btnDelete"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:color="#000000"
                    android:contentDescription="Clear"
                    android:src="@drawable/ic_clear" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="#31032AFD" />

            <GridLayout
                android:id="@+id/dialPad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:alignmentMode="alignMargins"
                android:columnCount="3"
                android:paddingHorizontal="@dimen/_19sdp"
                android:paddingVertical="@dimen/_10sdp"
                android:rowCount="4"
                android:useDefaultMargins="true">

                <Button
                    android:id="@+id/btn1"
                    style="@style/DialButton"
                    android:text="1" />

                <Button
                    android:id="@+id/btn2"
                    style="@style/DialButton"
                    android:text="2" />

                <Button
                    android:id="@+id/btn3"
                    style="@style/DialButton"
                    android:text="3" />

                <Button
                    android:id="@+id/btn4"
                    style="@style/DialButton"
                    android:text="4" />

                <Button
                    android:id="@+id/btn5"
                    style="@style/DialButton"
                    android:text="5" />

                <Button
                    android:id="@+id/btn6"
                    style="@style/DialButton"
                    android:text="6" />

                <Button
                    android:id="@+id/btn7"
                    style="@style/DialButton"
                    android:text="7" />

                <Button
                    android:id="@+id/btn8"
                    style="@style/DialButton"
                    android:text="8" />

                <Button
                    android:id="@+id/btn9"
                    style="@style/DialButton"
                    android:text="9" />

                <Button
                    android:id="@+id/btnStar"
                    style="@style/DialButton"
                    android:text="*" />

                <Button
                    android:id="@+id/btn0"
                    style="@style/DialButton"
                    android:text="0" />

                <Button
                    android:id="@+id/btnHash"
                    style="@style/DialButton"
                    android:text="#" />
            </GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#4CAF50"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:paddingVertical="@dimen/_5sdp"
                    android:text="Call"
                    android:textColor="#fff" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>